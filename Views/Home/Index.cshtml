@model List<Registrar>



<h1><center>RESULTADO</center></h1>
@if (Model.Count == 0) {
            <tr>
                <td colspan="9" class="text-center">Lista de pedidos registrados.</td>
                
            </tr><br>
            <tr>
                 <td colspan="9" class="text-center">  <a href="/Home/Registrar" class="btn btn-info">Registrar</a></td>
              
                
            </tr>
        }
@foreach (var result in Model)
        {
<div class="col-sm" style="border-radius: 14px; border: 1px solid rgb(56, 175, 255); background-color: rgb(255, 255, 255); margin-right: 10px;  margin-left: 10px; margin-top: 20px; padding: 20px; border-style: dotted; border-size:1pt;">
    <center><img src="@Html.DisplayFor(modelItem => result.url)" alt="" width="300" height="200" class="rounded-lg "></center><br>
    <center><p class="text-primary">@Html.DisplayFor(modelItem => result.Nombre)</p></center>
           
          <br>

<span style="color:#000000;">Total S/ @Html.DisplayFor(modelItem => result.Precio)</span>
 <br>

<span style="color:#000000;">Direccion : @Html.DisplayFor(modelItem => result.Direccion)</span>


<br>

<span style="color:#000000;">Descripcion : @Html.DisplayFor(modelItem => result.Descripcion)</span>

<br>

<span style="color:#000000;">Usuario: @Html.DisplayFor(modelItem => result.Usuario)</span>

<br>

<span style="color:#000000;">Telefono: @Html.DisplayFor(modelItem => result.Telefono)</span>

<br>

<span style="color:#000000;">Fecha: @Html.DisplayFor(modelItem => result.Fecha)</span>

</div>
          
         
            
        }
